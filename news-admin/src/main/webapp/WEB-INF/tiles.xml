<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="defaultTemplate" template="/jsp/templates/main-template.jsp">
        <put-attribute name="header" value="/jsp/tiles/header.jsp" />
        <put-attribute name="menu" value="/jsp/tiles/menu.jsp" />
        <put-attribute name="footer" value="/jsp/tiles/footer.jsp" />
    </definition>

    <definition name="newsList" extends="defaultTemplate">
        <put-attribute name="body" value="/jsp/tiles/body/news-list.jsp" />
    </definition>
    <definition name="newsAdder" extends="defaultTemplate">
        <put-attribute name="body" value="/jsp/tiles/body/news-add.jsp"/>
    </definition>
    <definition name="newsMessage" extends="defaultTemplate">
        <put-attribute name="body" value="/jsp/tiles/body/one-news-message.jsp"/>
    </definition>

    <definition name="authorManager" extends="defaultTemplate">
        <put-attribute name="body" value="/jsp/tiles/body/author-manage.jsp"/>
    </definition>

    <definition name="tagManager" extends="defaultTemplate">
        <put-attribute name="body" value="/jsp/tiles/body/tag-manage.jsp"/>
    </definition>

    <definition name="login" extends="defaultTemplate">
        <put-attribute name="body" value="/jsp/tiles/body/login.jsp" />
    </definition>

</tiles-definitions>